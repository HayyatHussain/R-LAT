<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="top-content flex w-full justify-between mb-6">
            <h1 class="text-3xl">
              <span class="font-light">Edit Post
            </h1>
            <a
              class="px-3 py-2 bg-blue-500 rounded-md cursor-pointer"
              href="/profile"
            >
              Go Back
            </a>
          </div>
          <form id="updPostForm" action="/update/<%= post._id %>" method="post">
            <textarea
              class="block w-1/3 p-3 resize-none bg-transparent border-2 border-zinc-800 rounded-md outline-none"
              name="updatedContent"
              id="updPostText"
            ><%= post.content %></textarea>
            <input
              class="w-40 text-md text-black px-3 py-2 bg-yellow-500 rounded-md cursor-pointer block mt-2"
              type="submit"
              value="Save Changes"
            />
          </form>
    </div>
    <script>
         const enterKeySubmit = (form) => { 
           return (e) => { 
             if (e.key === "Enter" && !e.shiftKey) { 
               document.getElementById(form).submit(); 
             } 
           }; 
         }; 
  
        document.getElementById("updPostText").addEventListener("keydown", enterKeySubmit("updPostForm"));
      </script>
  </body>
</html>
